@model Cliente_Rest_G04.Models.LoginViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-5">
            <div class="card shadow-lg border-0" style="border-radius:18px;">
                <div class="card-body p-4">

                    <div class="text-center mb-3">
                        <img src="~/images/logo_liga.png"
                             alt="Escudo" style="height:90px;">
                    </div>

                    <h3 class="text-center fw-bold mb-4">Iniciar Sesión</h3>

                    @if (!string.IsNullOrEmpty(Model?.Error))
                    {
                        <div class="alert alert-danger text-center">@Model.Error</div>
                    }

                    <form method="post" asp-action="Login">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input asp-for="UserName" class="form-control form-control-lg" placeholder="Usuario" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Contraseña</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Contraseña" required />
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100">Ingresar</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #f3f7f9 !important;
    }

    .form-control {
        border-radius: 10px;
    }
</style>
