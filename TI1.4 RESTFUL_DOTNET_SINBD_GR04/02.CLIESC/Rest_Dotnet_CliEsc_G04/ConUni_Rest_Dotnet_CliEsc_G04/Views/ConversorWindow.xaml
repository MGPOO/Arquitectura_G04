<Window x:Class="ClienteRestWpf.Views.ConversorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conversor Rest – Escritorio" Height="720" Width="1200"
        Background="#f3f7f9" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="GreenButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#178a58"/>
            <Setter Property="BorderBrush" Value="#178a58"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="14"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.18"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HCard" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#0d6efd"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="Combo" TargetType="ComboBox">
            <Setter Property="Height" Value="38"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Top bar -->
        <Border Background="White" DockPanel.Dock="Top" BorderBrush="#eaecef" BorderThickness="0,0,0,1">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Conversor de Unidades (Cliente de Escritorio Rest)"
                               FontSize="34" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="HelloText" Text="Hola, MONSTER" HorizontalAlignment="Center" Foreground="#6c757d"/>
                </StackPanel>
                <Button Content="Salir" Grid.Column="1" Padding="16,6" Margin="8,0,0,0"
                        Click="Logout" BorderBrush="#dc3545" Foreground="#dc3545" Background="White"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <UniformGrid Columns="3" Rows="1" Margin="24">

                <!-- Longitud -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Longitud" Style="{StaticResource HCard}"/>
                        <TextBlock Text="Valor" Margin="0,0,0,6"/>
                        <TextBox x:Name="TxtLongValor" Style="{StaticResource InputBox}"/>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="De:"/>
                                <ComboBox x:Name="CmbLongDe" Style="{StaticResource Combo}" SelectionChanged="CmbLongDe_SelectionChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="A:"/>
                                <ComboBox x:Name="CmbLongA" Style="{StaticResource Combo}"/>
                            </StackPanel>
                        </Grid>

                        <Button Content="Calcular" Margin="0,16,0,0"
                                Style="{StaticResource GreenButton}" Click="CalcularLongitud"/>
                        <TextBlock x:Name="LblLongResultado" Margin="0,12,0,0" FontSize="16" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Masa -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Masa" Style="{StaticResource HCard}"/>
                        <TextBlock Text="Valor" Margin="0,0,0,6"/>
                        <TextBox x:Name="TxtMasaValor" Style="{StaticResource InputBox}"/>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="De:"/>
                                <ComboBox x:Name="CmbMasaDe" Style="{StaticResource Combo}" SelectionChanged="CmbMasaDe_SelectionChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="A:"/>
                                <ComboBox x:Name="CmbMasaA" Style="{StaticResource Combo}"/>
                            </StackPanel>
                        </Grid>

                        <Button Content="Calcular" Margin="0,16,0,0"
                                Style="{StaticResource GreenButton}" Click="CalcularMasa"/>
                        <TextBlock x:Name="LblMasaResultado" Margin="0,12,0,0" FontSize="16" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Temperatura -->
                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Temperatura" Style="{StaticResource HCard}"/>
                        <TextBlock Text="Valor" Margin="0,0,0,6"/>
                        <TextBox x:Name="TxtTempValor" Style="{StaticResource InputBox}"/>

                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="De:"/>
                                <ComboBox x:Name="CmbTempDe" Style="{StaticResource Combo}" SelectionChanged="CmbTempDe_SelectionChanged"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Text="A:"/>
                                <ComboBox x:Name="CmbTempA" Style="{StaticResource Combo}"/>
                            </StackPanel>
                        </Grid>

                        <Button Content="Calcular" Margin="0,16,0,0"
                                Style="{StaticResource GreenButton}" Click="CalcularTemperatura"/>
                        <TextBlock x:Name="LblTempResultado" Margin="0,12,0,0" FontSize="16" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </ScrollViewer>
    </DockPanel>
</Window>
