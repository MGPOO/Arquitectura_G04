@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConUni_Rest_Dotnet_CliWeb_G04</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body style="background-color:#f3f7f9;">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-sm bg-white border-bottom shadow-sm mb-4">
            <div class="container">

                <a class="navbar-brand fw-bold text-primary" asp-controller="Conversor" asp-action="Index">
                    Conversor Rest Dotnet G04 Web
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="menu">

                    @{
                        // Detecta si estamos en la pantalla del Conversor
                        var ctrl = (ViewContext.RouteData.Values["controller"] as string) ?? "";
                        bool mostrarUsuario = ctrl.Equals("Conversor", StringComparison.OrdinalIgnoreCase);
                    }

                    <ul class="navbar-nav">

                        @if (mostrarUsuario && (User?.Identity?.IsAuthenticated ?? false))
                        {
                            <li class="nav-item me-3 d-flex align-items-center">
                                <span class="fw-semibold">Hola, @User.Identity!.Name</span>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout">
                                    Salir
                                </a>
                            </li>
                        }

                    </ul>

                </div>

            </div>
        </nav>
    </header>


    <!-- CONTENIDO -->
    <main class="container pb-5">
        @RenderBody()
    </main>


    <!-- FOOTER -->
    <footer class="border-top text-center py-3 text-muted small">
        © 2025 - ConUni_Rest_Dotnet_CliWeb_G04
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
