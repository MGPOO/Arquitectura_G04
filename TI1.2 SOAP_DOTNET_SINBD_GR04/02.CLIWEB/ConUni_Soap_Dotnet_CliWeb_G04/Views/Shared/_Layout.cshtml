@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConUni_Soap_Dotnet_CliWeb_G04</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConUni_Soap_Dotnet_CliWeb_G04.styles.css" asp-append-version="true" />

</head>

<body style="background-color:#f3f7f9;">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-sm bg-white border-bottom shadow-sm mb-4">
            <div class="container">

                <a class="navbar-brand fw-bold text-primary" asp-controller="Conversor" asp-action="Index">
                    Conversor SOAP Dotnet G04 Web
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="menu">
                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item me-3 d-flex align-items-center">
                                <span class="fw-semibold">Hola, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-danger btn-sm" asp-controller="Account" asp-action="Logout">Salir</a>
                            </li>
                        }
                        else
                        {
                            
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>


    <!-- CONTENT -->
    <main class="container pb-5">
        @RenderBody()
    </main>


    <!-- FOOTER -->
    <footer class="border-top text-center py-3 text-muted small">
        © 2025 - ConUni_Soap_Dotnet_CliWeb_G04
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
