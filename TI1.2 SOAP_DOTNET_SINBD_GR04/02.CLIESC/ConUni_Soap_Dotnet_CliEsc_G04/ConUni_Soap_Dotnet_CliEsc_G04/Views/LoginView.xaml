<Window x:Class="ConUni_Soap_Dotnet_CliEsc_G04.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar sesión"
        Height="580" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="#EEF2F6" ResizeMode="NoResize">

    <Grid>
        <Border Width="420"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="White" CornerRadius="16" Padding="35"
                Effect="{DynamicResource dropShadow}">
            <StackPanel>

                <TextBlock Text="Conversor SOAP Dotnet G04"
                           FontSize="24" FontWeight="Bold"
                           Foreground="#0D6EFD"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Escritorio"
                           FontSize="15"
                           Foreground="#0D6EFD"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>

                <!-- LOGO -->
                <Image Source="pack://application:,,,/ConUni_Soap_Dotnet_CliEsc_G04;component/Assets/logo_liga.png"
                       Width="120" Height="120"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

                <TextBlock Text="Iniciar Sesión"
                           FontSize="18" FontWeight="SemiBold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Usuario"/>
                <TextBox x:Name="UserBox" Height="38" Margin="0,4,0,14" Padding="8"/>

                <TextBlock Text="Contraseña"/>
                <PasswordBox x:Name="PassBox" Height="38" Margin="0,4,0,14" Padding="8"/>

                <TextBlock x:Name="ErrorText"
                           Visibility="Collapsed"
                           Foreground="#C82333"
                           Margin="0,4,0,4"
                           TextAlignment="Center"/>

                <Button Content="Ingresar"
                        Height="46" Margin="0,12,0,0"
                        Background="#198754" Foreground="White"
                        FontWeight="Bold" BorderBrush="Transparent"
                        Click="OnLogin">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>
    </Grid>

    <Window.Resources>
        <DropShadowEffect x:Key="dropShadow"
                          Color="#1A000000" BlurRadius="16" ShadowDepth="0" Opacity="0.35"/>
    </Window.Resources>

</Window>
