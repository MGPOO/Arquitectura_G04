@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpCtx

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@ViewData["Title"] - Cliente REST</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand fw-bold text-primary" asp-controller="Conversor" asp-action="Index"> Conversor Rest Dotnet G04 Web</a>
            <div class="ms-auto">
                @if (HttpCtx.HttpContext?.User?.Identity?.IsAuthenticated ?? false)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button class="btn btn-outline-danger btn-sm">Salir</button>
                    </form>
                }
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top text-center py-3 text-muted small">
        © 2025 - ConUni_Rest_Dotnet_CliWeb_G04
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
