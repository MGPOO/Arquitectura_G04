<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<system.serviceModel>
		<services>
			<service name="espe.edu.ec.monster.controlador.ConversionService">
				<!-- Endpoint SOAP para clientes -->
				<endpoint address=""
						  binding="basicHttpBinding"
						  contract="espe.edu.ec.monster.modelo.IConversionService" />

				<!-- Endpoint MEX (metadatos) útil para Add Service Reference -->
				<endpoint address="mex"
						  binding="mexHttpBinding"
						  contract="IMetadataExchange" />

				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/Design_Time_Addresses/ConversionUnidades_SOAP/Service1/" />
					</baseAddresses>
				</host>
			</service>
		</services>

		<behaviors>
			<serviceBehaviors>
				<behavior>
					<!-- Habilita ?wsdl -->
					<serviceMetadata httpGetEnabled="true" httpsGetEnabled="true" />
					<!-- No exponer detalles de excepción en prod -->
					<serviceDebug includeExceptionDetailInFaults="false" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>
